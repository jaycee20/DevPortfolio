<h1>Create a new Portfolio Item</h1>
<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>
  <div class="field">
    <%= form.label :boddy %>
    <%= form.text_area :boddy %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |technology_form| %>
      <ui>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </ui>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
